<Window x:Class="diploma_desk.MyDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diploma_desk"
        mc:Ignorable="d"
        Title="Отклонение заказа" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите причину:" Margin="0 0 0 10" />
            <Button Content="Неверный заказ" Margin="0 0 0 5" Click="CancelButton_Click"/>
            <Button Content="Не хватает товара" Margin="0 0 0 5" Click="OutOfStockButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
